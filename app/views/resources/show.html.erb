<h2><%= @resource.title %></h2>
<% if @resource.alt_titles? %>
  <h3>(<%= @resource.alt_titles %>)</h3>
<% end %>
<a href="<%= @resource.access_url %>" id="go-to-db" class="btn">Go to database</a>
<p>
 <% if admin? %>
  <%= link_to 'Edit', edit_resource_path(@resource) %>|&nbsp;
 <% end %>
  <%= link_to 'Back to List', resources_path %>
</p>

<table class="table table-bordered">
  <tr>
    <td>Description:</td>
    <td><%= @resource.description %></td>
  </tr>
  <tr>
    <td>Access:</td>
    <td><%= restrictions_note %></td>
  </tr>
  <tr>
    <td>Popular?</td>
    <td><%= popular_note %> </td>
  </tr>
<% if admin? %>
    <tr>
    <td>Active?</td>
    <td><%= @resource.active %></td>
  </tr>
  <tr>
    <td>Notes:</td>
    <td><%= @resource.notes %></td>
  </tr>
<% end %>
</table>
<p>This database has been recommended for the following subjects/keywords:</p>
<div class="subjects">
<% @resource.terms.each do |term| %>
   <div class="subjects-header">
      <%  if term.acronym?%>
      <%= term.acronym.upcase %>
      <%  else %>
       <%= "" %>
      <%  end %>
   </div>

  <div><%= term.item.titlecase %></div>
<% end %>
</div>
<p class="clear">&nbsp;</p> <!-- bump for footer -->
