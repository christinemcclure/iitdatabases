<h1>Listing terms</h1>

<table>
  <tr>
    <th>Acronym</th>
    <th>Subject/Keyword</th>
    <th>Iit subject</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.acronym.upcase %></td>
    <td><%= term.item %></td>
    <td><%= term.iit_subject %></td>
    <td><%= term.notes %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

