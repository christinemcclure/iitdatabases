<!DOCTYPE html>
<html>
<head>
  <title>Iitdatabases</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <header class="hero-unit">
      <h1>IIT Libraries</h1>
      <h2>Database finder</h2>
    </header>
    <div class="row-fluid">
      <div class="span4">
         <p>Get databases by subject major </p>
        <%= form_tag resources_path, :method => 'get' do %>
          <p>
            <%= select_tag "subject_search", options_from_collection_for_select(@terms, "id", "item"), {:include_blank => true} %>
            <%= submit_tag "Get databases by subject", :name => nil, :class => 'btn' %>
          </p>

        <% end %>

        <%= form_tag resources_path, :method => 'get' do %>
          <p>
             <%= hidden_field_tag :all_active, params[:all_active] %>
            <%= submit_tag "View All Databases", :name => nil, :class => 'btn' %>
          </p>
        <% end %>
        <div class="admin">
          <%= link_to 'Login', login_path %> |
          <%= link_to 'Logout', logout_path %>
          <%
            if admin?
              status_msg = "logged in"
            else
              status_msg = "guest"
            end
          %>
          <p><%= status_msg %></p>
        </div>
      </div>
        <div class="span8">
          <% if flash[:alert] %>
            <p class="flash-error"><%= flash[:alert] %></p>
          <% end %>
          <% if flash[:notice] %>
            <p class="flash-notice"><%= flash[:notice] %></p>
          <% end %>
          <%= yield %>
        </div>
      
    </div>

  </div>

</body>
</html>
